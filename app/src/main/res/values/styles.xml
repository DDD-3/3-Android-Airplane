<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#000000</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Vertical Layout 에서 사용하는 구분선 -->
    <style name="divider_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#5c5c5c</item>
    </style>

    <!-- Horizontal Layout 에서 사용하는 구분선 -->
    <style name="divider_horizontal">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#5c5c5c</item>
    </style>

    <!-- Font Style -->
    <style name="font_r">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="font_b">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
    </style>

    <style name="font_l">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_light</item>
    </style>

    <style name="font_m">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>

    <style name="font_t">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_thin</item>
    </style>

</resources>
